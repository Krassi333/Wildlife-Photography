<section id="my-posts">
    <h1>My posts.</h1>

    <div class="my-container">
        
        {{#if posts.noPosts}}
        <div class="no-posts">
            <div class="no-posts-img">
                <img src="/static/img/bear.jpg" alt="image_nature_3">
            </div>
            <p class="no-offer">There are no own posts yet...</p>
        </div>
        {{else}}

        {{#each posts}}
        {{> myPost}}
        {{/each}}
{{/if}}
    </div>
</section>